<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andrewsosa.hackfsu_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity
            android:name="com.andrewsosa.hackfsu_test.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andrewsosa.hackfsu_test.HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName="com.andrewsosa.hackfsu_test.MainActivity"
            android:theme="@style/AppTheme.HelpRequest" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.andrewsosa.hackfsu_test.MainActivity" />
        </activity>
    </application>

</manifest>